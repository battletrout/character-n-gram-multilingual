# -*- mode: ruby -*-
# vi: set ft=ruby :

Vagrant.configure("2") do |config|
    config.vm.box = "ubuntu/jammy64"
    config.vm.provider "virtualbox" do |vb|
      vb.memory = "8192"
      vb.cpus = 4
    end
  
    # Create a shared folder between host and guest
    config.vm.synced_folder ".", "/vagrant_data"
  
    config.vm.provision "shell", inline: <<-SHELL
      apt-get update
      apt-get install -y build-essential cmake git python3 python3-pip
  
      # Install C++ development tools
      apt-get install -y clang libclang-dev
  
      # Install Python dependencies
      pip3 install spacy pybind11
  
      # Download spaCy model (you can change this to the model you need)
      python3 -m spacy download en_core_web_sm
  
      # Set up environment variables
      echo 'export PATH=$PATH:/usr/local/bin' >> /home/vagrant/.bashrc
      echo 'export PYTHONPATH=$PYTHONPATH:/vagrant_data' >> /home/vagrant/.bashrc

    SHELL
  end